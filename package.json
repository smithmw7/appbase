{
  "name": "puzzle-app-framework",
  "version": "1.0.0",
  "description": "Web-first native puzzle app framework with replaceable content",
  "private": true,
  "workspaces": [
    "content/*",
    "container"
  ],
  "scripts": {
    "build:word-strike": "node pipeline/scripts/build-all.js word-strike",
    "sync:word-strike": "node pipeline/scripts/sync-capacitor.js word-strike",
    "configure:word-strike": "node pipeline/scripts/configure-ios.js word-strike",
    "install:all": "npm install && npm install --workspace=container && npm install --workspace=content/word-strike",
    "firebase:login": "npx firebase-tools login",
    "firebase:use": "npx firebase-tools use com-hightopgames-firebase",
    "firebase:remoteconfig": "npx firebase-tools remoteconfig:publish firebase-remote-config.template.json",
    "firebase:apps": "npx firebase-tools apps:list IOS",
    "firebase:download-config": "npx firebase-tools apps:sdkconfig IOS 1:74002814264:ios:9d080eec9bb5da1c76ddcd > container/ios/App/App/GoogleService-Info.plist",
    "firebase:deploy-remoteconfig": "npx firebase-tools deploy --only remoteconfig",
    "build:word-strike": "node pipeline/scripts/build-all.js word-strike"
  },
  "devDependencies": {
    "firebase-tools": "^13.0.0",
    "plist": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@capacitor/app": "^6.0.3",
    "@capacitor/core": "^6.2.1",
    "@capacitor/haptics": "^6.0.3"
  }
}
